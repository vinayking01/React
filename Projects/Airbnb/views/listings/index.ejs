<% layout('layouts/boilerplate') %>
    <% block('head').append('<link rel="stylesheet" href="/index.css">') %>

        <body>
    <header class="text-center mb-4">
        <h1 class="display-4 text-primary">Airbnb Listings</h1>
    </header>
    <main>
        <div class="list-container row justify-content-center mx-auto" style="max-width: 1200px;">
            <div class="list-container row ">
                <% alllistings.forEach(function(listing) { %>
                    <div class="col-md-6 col-lg-4 mb-4">
                        <a class="card h-100 text-decoration-none shadow" href="/listings/<%= listing.id %>">
                            <div style="overflow: hidden; height: 200px;">
                                <img src="<%= listing.image.url %>" class="card-img-top w-100" alt="Image of <%= listing.title %>" style="object-fit: cover; height: 100%;">
                            </div>
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title text-dark">
                                    <%= listing.title %>
                                </h5>
                                <p class="card-text text-muted">
                                    <%= listing.description %>
                                </p>
                                <p class="text-success fw-bold mt-auto">
                                    Price: <%= listing.price %> Rs per night
                                </p>
                            </div>
                        </a>
                    </div>
                <% }); %>
            </div>
        </div>
    </main>

</body>




        <!--
Working of ejs-mate 
1. When you include layout('boilerplate') in your child template (e.g., index.ejs), the layout engine (like express-ejs-layouts) takes the content of your child template and assigns it to the body variable.
2. This body variable is then rendered in the layout file where - body - is defined. -->